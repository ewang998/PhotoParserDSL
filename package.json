{
    "name": "project-1",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "color-string": "^1.5.3",
        "escape-string-regexp": "^4.0.0",
        "jimp": "^0.16.1",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-images-upload": "^1.2.8",
        "react-scripts": "3.4.3",
        "uuid": "^8.3.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.3.2",
        "@testing-library/user-event": "^7.1.2",
        "@types/color-string": "^1.5.0",
        "@types/jest": "^24.9.1",
        "@types/node": "^12.0.0",
        "@types/react": "^16.9.0",
        "@types/react-dom": "^16.9.0",
        "@types/uuid": "^8.3.0",
        "prettier": "2.1.2",
        "ts-jest": "^26.4.1-alpha.0",
        "typescript": "^4.0.3"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "jest --verbose --runInBand",
        "eject": "react-scripts eject",
        "clean": "jest --clearCache"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "jest": {
        "roots": [
            "<rootDir>/src",
            "<rootDir>/src/lib/Tokenizer"
        ],
        "preset": "ts-jest",
        "testEnvironment": "node",
        "silent": false,
        "transform": {
            "^.+\\.(tsx?|ts?)$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?|ts?)$",
        "testPathIgnorePatterns": [
            "/dist/",
            "/node_modules/"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "setupFiles": [
            "dotenv/config"
        ]
    }
}
